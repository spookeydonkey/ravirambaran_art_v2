---
// component imports

import MainHead from "./MainHead.astro";
import Footer from "../components/organisms/Footer.astro";
import Nav from "../components/organisms/Nav.astro";
import Header from "../components/organisms/Header.astro";
import { ViewTransitions } from "astro:transitions";
interface Props {
  title?: string;
  description?: string;
  image?: string;
}

//styles import
import "../css/main.css";
import "../css/colors.css";
import "../css/typography.css";
import "../css/sizing.css";

const {
  title = "My personal art page",
  description = "Ravi Rambaran's beautiful artwork",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <MainHead {title} {description} />
  <body>
    <header>
      <Header slot="" />
      <Nav slot="" />
    </header>
    <slot />
    <Footer slot="" />

    <style is:global>
      @import "../css/main.css";
      @import "../css/typography.css";
      @import "../css/colors.css";
      @import "../css/sizing.css";
      :root {
      }
    </style>
  </body>
</html>
