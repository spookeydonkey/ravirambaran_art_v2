---
// component imports
import MainLayout from "../layouts/MainLayout.astro";
import GalleryItem from "../components/organisms/GalleryItem.astro";
import Gallery from "../components/templates/Gallery.astro";

//styles import
import "../css/main.css";
import "../css/colors.css";
import "../css/typography.css";
import "../css/sizing.css";

// scripts imports
const { href, title, body, image, alt, description } = Astro.props;
---

<MainLayout>
  <main>
    <p class="instructions">
      This website is still in development, but working, so...: Hello world!<br
      />
    </p>
    <Gallery>
      <!-- <ul role="list" class="link-card-grid"> -->
    </Gallery>
    <!-- </ul> -->
  </main>
</MainLayout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    background-color: var(--bg-color);
    color: var(--text-color);
    font-size: var(--text-s0);
    line-height: 1.6;
  }

  h1 {
    line-height: 1;
    text-align: center;
    margin-bottom: var(--s0);
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
</style>
