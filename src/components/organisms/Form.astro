---
// component import
import { Icon } from "astro-icon";

//styles import
import "../../css/main.css";
import "../../css/colors.css";
import "../../css/typography.css";
import "../../css/sizing.css";
---

<div class="site-main">
  <!-- vullen met backend/php ipv netlify -->
  <form class="form">
    <fieldset>
      <legend>Name</legend>
      <label for="Name">Name:</label>
      <br />
      <input title="type" type="text" />
      <br />
    </fieldset>
    <fieldset>
      <legend>Contact</legend>
      <label for="email">E-mail:</label>
      <br />
      <input type="email" />
      <br />
    </fieldset>
    <fieldset>
      <legend>Comments</legend>
      <label for="Comment">Comments:</label>
      <br />
      <textarea rows="5" cols="20"></textarea>
      <br />
    </fieldset>
    <label for="submit">Under construction - Send doesn't work yet</label>
    <br />
    <div class="submit-contact">
      <input type="submit" value="Send" disabled />
      <input type="submit" value="Reset" disabled />
      <br />
    </div>
  </form>
</div>
<style>
  .form {
    padding: var(--s0);
    font-size: var(--text-s0);
  }
  .submit-contact {
    display: flex;
    gap: var(--s0);
    flex-wrap: wrap;
    font-family: "Varela Round", sans-serif;
    font-size: var(--text-s0);
    width: var(--s8);

    & input {
      border: none;
      background-color: rgb(100, 153, 100);
    }
  }
</style>
