---
import { Image } from "astro:assets";
import astroImage from "../../picca/sketches/sketching-1-2016.png";

//styles import
import "../../css/main.css";
import "../../css/colors.css";
import "../../css/typography.css";
import "../../css/sizing.css";

// scripts imports

const { title, description, image, alt, href } = Astro.props;
---

<div class="artwork">
  <a href={href}>
    <Image src={astroImage} alt="Image alt" />
    <span class="description">
      {title}
    </span>
  </a>
</div>

<style>
  .description {
    display: none;
  }
</style>
