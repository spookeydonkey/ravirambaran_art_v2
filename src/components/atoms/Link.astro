---
// library imports
import { Icon } from "astro-icon";

interface Props {
    text: string;
    href: string;
    style: "primary" | "secondary" | "tertiary";
    image?: string;
    icon?: {
        name: string;
        side: "left" | "right";
    };
    isFilled?: boolean;
    borderVisible?: boolean;
    classes?: string;
}

const {
    text,
    href,
    style,
    icon,
    image,
    isFilled = true,
    borderVisible = false,
    classes,
    ...rest
} = Astro.props as Props;

// Alpine navData object replacing navData.js
const data = () => ({
    currentPath: window.location.pathname
});
---

<a
    href={href}
    class:list={[
        "link",
        classes,
        style,
        { filled: isFilled, bordered: borderVisible },
    ]}
    data-navLink
    x-bind:aria-current="currentPath === href ? 'page' : null"
    {...rest}
>
    {
        icon && icon.side === "left" && (
            <Icon name={icon.name} height="24" width="24" />
        )
    }

    {image && (
        <img src={image} alt={text} height="35" width="35" />
    )}

    <span>{text}</span>

    {
        icon && icon.side === "right" && (
            <Icon name={icon.name} height="24" width="24" />
        )
    }
</a>
