---
// component imports
import type { CollectionEntry } from "astro:content";
import Entry from "../atoms/Entry.astro";

type Props = {
  entries: CollectionEntry<"blog">[];
};

const { entries } = Astro.props;

//styles import
import "../../css/main.css";
import "../../css/colors.css";
import "../../css/typography.css";
import "../../css/sizing.css";
---

<main>
  {entries.map((entry) => <Entry entry={entry} />)}
</main>

<script></script>
<style>
  main {
    padding: var(--s0);
  }
  img {
    width: 300px;
    align-self: center;
  }
  .section {
    text-align: left;
    margin-bottom: 10%;
    display: flex;
    flex-direction: column;
  }

  .section h3 {
    margin-bottom: var(--s-2);
  }
</style>
